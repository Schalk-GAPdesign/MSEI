#__articleHeader-main
    #__articleHeader-centre.u-cf(class="#{article.content.header.photoGallery!=null ? '__articleHeader-centre--photoGallery': '__none'}")


            //- 1 IMAGE HEADER
            if(article.content.header.imageHeader!=null)
                #__articleHeader-col1.u-floatLeft
                    #__articleHeader-col1-row1
                        +M__heading(article.content.header.imageHeader.text1, article.content.header.imageHeader.text2, true)
                    #__articleHeader-col1-row2
                        +M__featuredImage('http://lorempixel.com/860/430/technics', '*WP Category*')

                    //- 2 PHOTO GALLERY
                    if(article.content.header.photoGallery!=null)
                        #__articleHeader-col1-row3
                            +O__photoGalleryList

            //- 3.1 PARTNER LOGO
            if(article.content.header.partnerLogo!=null)
                #__articleHeader-col2.u-floatRight
                    +Advert-partnerLogo

            //- 3.2 SKYSCRAPER ADVERT
            if(article.content.header.largeSkyscraperAdvert!=null)
                #__articleHeader-col2.u-floatRight
                    +Advert--largeSkyscraper

            //- 3.3 MAGAZINE ADVERT
            if(article.content.header.magazineAdvertisement!=null)
                //= MAGAZINE ADVERT
                #__articleHeader-col2.u-floatRight
                    +O__magazineMockupBlock


//-///////////////////////////////////////////////////////////////////////////////
//-                                                                             //
//-                                                                             //
//-    LAYOUT                                                                   //
//-   ---------------                                                           //
//-    ARTICLE CONTENT                                                          //
//-                                                                             //
//-                                                                             //
//-///////////////////////////////////////////////////////////////////////////////


#__articleContent-main
    #__articleContent-centre
        #__articleContent-container.u-cf
            #__articleContent-col2.u-floatRight

                //- 1.1 REPORT
                if(article.content.article.report!=null)
                    #__articleContent-typeAssets
                        +TextPrompt--report

                //- 1.2 REPORT--SIGNEDOUT
                if(article.content.article.report__signedOut!=null)
                    #__articleContent-typeAssets
                        +TextPrompt

                //- 2.1 TENDER
                if(article.content.article.tenderDetails!=null)
                    #__articleContent-typeAssets
                        +TextPrompt--tender

                //- 2.2 TENDER--SIGNEDOUT
                if(article.content.article.tenderDetails__signedOut!=null)
                    #__articleContent-typeAssets
                        |+TextPrompt--tender--signedOut

                //- 2.3 TENDER--EXPIRED
                if(article.content.article.tenderDetail__expired!=null)
                    #__articleContent-typeAssets
                        +TextPrompt--tender--expired

                //- 3.1 INTRO
                if(article.content.article.regularIntro!=null)
                    #__articleContent-col2-row1
                        +A__smallTitle(null, '17 SEPTEMBER 2015')
                    #__articleContent-col2-row2
                        h1 Post Title
                    #__articleContent-col2-row3
                        h2 Post Sub-heading

                //- 3.2 INTRO--EVENT
                if(article.content.article.eventIntro!=null)
                    #__articleContent-col2-row0
                        #__articleContent-col2-row0-row1
                           +M__eventIntro
                    #__articleContent-col2-row2
                        h1 Post Heading
                    #__articleContent-col2-row3
                        h2 Post Sub-Heading

                //- 4 CONTENT (INCLUDE)
                if(article.content.article.content!=null)
                      #__articleContent-col2-row3
                        include includes/content.jade

                //- 5 CTA
                if(article.content.article.textCTA!=null)
                    #__textCTA-main
                        #__textCTA-row1
                            +M__heading('Interested in more Tenders?')
                        #__textCTA-row2
                            +TextButton--blue(article.content.article.textCTA)

                //- 6 OTHER TENDERS LIST
                if(article.content.article.otherTenders!=null)
                    #__textCTA-main
                        #__textCTA-row1
                            +M__heading('Other Tenders')
                        #__textCTA-row2
                            asdsd
                            +O__textPrompt--otherTenders

                //- 7 FORM (INCLUDE)
                if(article.content.article.form!=null)
                    #__form-main
                        include includes/form.html

            //- 8 SOCIAL SHARE
            if(article.content.article.socialShare!=null)
                #__articleContent-col1.u-floatLeft
                    #__articleContent-sticky
                        #__articleContent-col1-row1
                            +A__smallTitle('--socialShare','Share Article')
                        #__articleContent-col1-row2
                            +O__socialShareList


