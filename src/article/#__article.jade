#__articleFooter-main
    #__articleFooter-centre.u-cf
        if(article.content.footer.comments!=null || article.content.footer.submitButton!=null)
        #__articleFooter-col1.u-floatLeft

            //- 1.1 COMMENTS (INCLUDE)
            if(article.content.footer.comments!=null)
                #__articleFooter-col1-row1
                    +M__heading('Join the Discussion')
                #__articleFooter-col1-row2
                    |HTML_comments

            //- 1.2 SUBMIT BUTTONS
            if(article.content.footer.submitButton!=null)
                #__articleFooter-col1-row3
                    +M__heading('Submit News Story')
                #__articleFooter-col1-row4
                    +O__textPromptList

        //- 2.1 RELATED CONTENT
        if(article.content.footer.relatedContentAlt!=null)
            #__articleFooterRelatedContentAlt-main
                #__articleFooterelatedContentAlt-center
                    #__articleFooterRelatedContentAlt-row1
                        +M__heading('Press Releases')
                    #__articleFooterRelatedContentAlt-row2.u-cf
                        each val in [1,2,3]
                            .ThumbnailContainer.ThumbnailContainer--three.u-floatLeft
                                +Thumbnail

        //- 2.2 RELATED CONTENT -- PRESS RELEASE
        if(article.content.footer.pressRelease!=null)
            //- PRESS RELEASE
            #__pressReleases-main
                #__pressRelease-centre
                    #__pressRelease-row1
                        +M__heading('Related Content')
                    #__pressRelease-row2.u-cf
                        each val in [1,2,3]
                            .ThumbnailContainer.ThumbnailContainer--three.u-floatLeft
                                +Thumbnail

        //- 2.3 RELATED CONTENT -- PARTNER CONTENT
        if(article.content.footer.partnerContent!=null)
            #__pressReleases-main
                #__pressRelease-centre
                    #__pressRelease-row1
                        +M__heading('Partner Content')
                    #__pressRelease-row2.u-cf
                        each val in [1,2,3]
                            .ThumbnailContainer.ThumbnailContainer--three.u-floatLeft
                                +Thumbnail

        //- 2.4 RELATED CONTENT -- WITH COMMENTS
        if(article.content.footer.relatedContent!=null)
            #__articleFooter-col2.u-floatRight
                #__articleFooter-col2-row1
                    +M__heading('Related Content')
                #__articleFooter-col2-row2
                        each val in [1,2,3]
                            .ThumbnailContainer
                                +Thumbnail

        //- 3.1 FILES
        if(article.content.footer.otherFiles!=null)
            //- OTHER FILES
            #__otherFiles-main
                #__otherFiles-centre
                    #__otherFiles-row1
                        +M__heading('Other Files')
                    #__otherFiles-row2
                        +O__labeledLinksList--otherFiles

        //- 3.2 FILES -- PARTNER
        if(article.content.footer.partnerFiles!=null)
            #__otherFiles-main
                #__otherFiles-centre
                    #__otherFiles-row1
                        +M__heading('Partner Downloadable Files')
                    #__otherFiles-row2
                        +O__labeledLinksList--partnerFiles

        //- 3.3 FILES - SPEAKER PRESENTATIONS
        if(article.content.footer.speakerSlides!=null)
            #__presentationFiles-main
                #__presentationFiles-centre
                    #__presentationFiles-row1
                        +M__heading('View Speaker Presentation Files')
                    #__presentationFiles-row2
                        |s


