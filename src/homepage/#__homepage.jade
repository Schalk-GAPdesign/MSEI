#MediaHome-main
    #MediaHome-centre
        #MediaHome-row1.u-cf
            #MediaHome-row1-col1.u-floatLeft
                #MediaHome-row1-col1-row1
                    +Heading('Upcoming Webinar')
                #MediaHome-row1-col1-row2
                    +Thumbnail--event--large--webinar
                #MediaHome-row1-col1-row3
                    +TextButton--bold--webinar


            #MediaHome-row1-col2.u-floatRight
                #MediaHome-row1-col2-row1
                    +Heading('Featured Video')
                #MediaHome-row1-col2-row2
                    +Thumbnail--media--showcase
        #MediaHome-row2
                +Heading('Latest Media' , 'View All Media')
        #MediaHome-row3.u-cf
                each val in [1,2,3]
                    .u-col3.MediaHome-container.u-floatLeft
                        +Thumbnail--media





