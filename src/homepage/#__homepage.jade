#ReportHome-main
    #ReportHome-centre
        #ReportHome-row1.u-cf
            #ReportHome-col1.u-floatLeft
                #ReportHome-col1-row1
                    +Advert--largeSuperbanner
                #ReportHome-col1-row2
                    +Heading('Industry Reports', 'More Reports')
                #ReportHome-col1-row3
                    +TextButton--bold--grey('Browse the MSEI Report Library')
                #ReportHome-col1-row4
                    +TextButton--files(1,2,3,4)
            #ReportHome-col2.u-floatRight
                +Advert--largeSkyscraper
        #ReportHome-row2
            +Advert


