.login-container
  form#loginform(name='loginform', action='//www.metering.com/wp-login.php', method='post')
    p.login-username
      label(for='user_login') Username
      input#user_login.input(type='text', name='log', value='', size='20', placeholder='Username', style='background-image: url(data:image/png;base64,); background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;', autocomplete='off')
    p.login-password
      label(for='user_pass') Password
      input#user_pass.input(type='password', name='pwd', value='', size='20', placeholder='Password', style='background-image: url(data:image/png;base64,); background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;', autocomplete='off')

    #gpd_Login-main.u-cf
        #gpd_Login-button.login-submit.u-floatLeft
          input#wp-submit.button-primary(type='submit', name='wp-submit', value='Sign In')
          input(type='hidden', name='redirect_to', value='http://www.metering.com/')

        #gpd_Login-remember.u-floatLeft
            label
                input(name='rememberme', type='checkbox', value='forever')
                span#gpd_Login-rememberItem Remember Me

        #gpd_Login-forgot.u-floatLeft
            a(href='http://www.metering.com/wp-login.php?action=lostpassword', title='Retrieve password') Forgot password?
