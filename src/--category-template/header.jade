//- MOLECULE: COMNTENT THUMB


mixin M__contentThumb()
    .M__contentThumb-main.u-relative(style="background: lightgrey;")
       
        picture
          
          source(data-srcset="https://verenaheinrich.files.wordpress.com/2012/07/july1.jpg", media="(max-width: 500px)")
          source(data-srcset="https://verenaheinrich.files.wordpress.com/2012/07/july1.jpg", media="(max-width: 1024px)")
          source(data-srcset="https://verenaheinrich.files.wordpress.com/2012/07/july1.jpg")
          
          img.lazyload(src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==", data-src="https://verenaheinrich.files.wordpress.com/2012/07/july1.jpg", alt="image with artdirection")


    
        
        
        
        

        
        
        
        .M__contentThumb-container.u-absolute
            .M__contentThumb-label.u-table Label
            .M__contentThumb-overlay.u-table
                .M__contentThumb-row.u-tableRow
                    //.M__contentThumb-mediaPlay.u-tableCell
                        .sprite.sprite-play
                    .M__contentThumb-content.u-tableCell
                        .M__contentThumb-showcase Top Story
                        .M__contentThumb-title Copenhagen builds carbon signaling waste-to-power plant
                        .M__contentThumb-subheading Copenhagen builds carbon signaling waste-to-power plant
                        .M__contentThumb-date 11 SEPTEMBER 2015



//-//////////////////////////////////////////////////////////////////////////////////////////
//- MOLECULE: LEADERBOARD ADVERT


mixin M__leaderboardAdvert
    picture
        img.M__leaderboardAdvert-image(src="#{head.dynamic.adverts.leaderboard.desktop}")

//-//////////////////////////////////////////////////////////////////////////////////////////
//- MOLECULE: TOP NAV BUTTON


mixin M__topNavButton
    | ::

//-//////////////////////////////////////////////////////////////////////////////////////////
//- MOLECULE: FILTER BUTTON


mixin M__filterButton(title, dropdown, ...options )
    if(dropdown == true)
        select.M__contentButton-main.M__contentButton-main--filter

            each val, index in options
                if(val!=null)
                    if(index==0)
                        option(disabled selected)= title
                    if(index>0)
                        option= val
    if(dropdown == false)
        a.u-noUnderline(href="#")
            .M__contentButton-main.M__contentButton-main--filter= title


//-//////////////////////////////////////////////////////////////////////////////////////////
//- MOLECULE: INTRO PARAGRAPH


mixin M__introParagraph(text1)
    .M__introParagraph-main= text1


//-//////////////////////////////////////////////////////////////////////////////////////////
//-MOLECULE: HEADING


mixin M__heading(text1, text2, link)
    .M__heading-main.u-cf
        if text1
            .M__heading-title.u-floatLeft= text1

//-//////////////////////////////////////////////////////////////////////////////////////////
//- MOLECULE: PAGANIATION BUTTON


mixin M__paginationButton(text)
    a.u-noUnderline(href="#")
        .M__contentButton-main.M__contentButton-main--pagination= text


