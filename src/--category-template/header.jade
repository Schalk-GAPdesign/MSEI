//-//////////////////////////////////////////////////////////////////////////////////////////
//- ORGANISM: FILTER BUTTONS


mixin O__filterButtons
    .O__filterButtons-main
        each val in content.static.introduction.buttons
            .O__filterButtons-item
                +M__filterButton(val.title, val.dropdown, val.title, val.options[0], val.options[1], val.options[2], val.options[3], val.options[4], val.options[5], val.options[6], val.options[7], val.options[8])


//-//////////////////////////////////////////////////////////////////////////////////////////
//- ORGANISM: CATEGORY LIST


mixin O__categoryList
    .O__categoryList-main.u-cf
        each val, index in content.dynamic.thumbnails
            if(index==3)
                O__categoryList-heading.u-floatLeft
                    +M__heading(content.static.headings[1].title)
            .O__categoryList-item.u-floatLeft
                .O__categoryList-position
                    +M__thumbnail


//-//////////////////////////////////////////////////////////////////////////////////////////
//- ORGANISM: SOCIAL HEAD LIST


mixin O__social
    .O__social-main.u-cf
        each val in head.static.secondaryNav
            .O__social-item.u-floatLeft
                |M__social--head-item

//-//////////////////////////////////////////////////////////////////////////////////////////
//- ORGANISM: SECONDARY NAV LIST

mixin O__secondaryNavList
    .O__secondaryNavList-main.u-cf
        each val in head.static.secondaryNav
            .O__secondaryNavList-item.u-floatLeft
                |M__secondaryNavButton

//-//////////////////////////////////////////////////////////////////////////////////////////
//- ORGANISM: MAIN NAV LIST


mixin O__mainNavList
    .O__mainNavList-main.u-cf
        each val in head.static.mainNav
            .O__mainNavList-item.u-floatLeft
                |M__mainNavButton

//-//////////////////////////////////////////////////////////////////////////////////////////
//- ORGANISM: TOP NAV LIST

mixin O__topNav
    .O__topNav-main.u-cf
        each val in head.static.topNav
            .O__topNav-item.u-floatLeft
                |M__topNavButton

//-//////////////////////////////////////////////////////////////////////////////////////////
//- ORGANISM: TOP NAV LIST

mixin O__topNav
    .O__topNav-main.u-cf
        each val in head.static.topNav
            .O__topNav-item.u-floatLeft
                |M__topNavButton


//-//////////////////////////////////////////////////////////////////////////////////////////
//- ORGANISM: PAGINATION NUMBERS LIST



mixin O__paginationNumbers
    .O__paginationNumbers-main.u-cf
        each val, index in content.dynamic.pagination.direct
            .O__paginationNumbers-item.u-floatLeft(class=(index===0 ? 'u-noMargin': null))
                +M__paginationButton(val)


